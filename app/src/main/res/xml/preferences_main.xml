<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/category_main_screen">

        <SwitchPreference
            android:defaultValue="true"
            android:title="@string/switch_show_snackbar"
            android:key="pref_snackbar" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/category_map">

        <ListPreference
            android:defaultValue="3"
            android:title="@string/map_provider"
            android:entries="@array/maps_providers_array"
            android:entryValues="@array/maps_providers_array_values"
            android:key="pref_map_provider" />

    </PreferenceCategory>

</PreferenceScreen>